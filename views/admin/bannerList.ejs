<%- include('../adminLayout/header.ejs',{adminSession}) %>

<section class="content-main" style="margin-left: 10px;margin-bottom: 30px; overflow-x: hidden;">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title" style="margin-left: 700px;">Banners</h2>
            <p></p>
        </div>
        <div>
            
            <a href="/admin/addBanner" class="btn btn-primary btn-sm rounded" style="margin-bottom: 30px;" >Create new</a>
        </div>
    </div>
   
    <div class="row">
        <% if (banner.length > 0) { %>
            <% for (let i = 0; i < banner.length; i++) { %>

                

        <div class="col-xl-4 col-lg-5 col-md-5">
            <div class="card card-product-grid" style="border-color: rgb(0, 0, 0); margin-bottom:10px ;">
                <a href="#" class="img-wrap"> <img src="/admin/assets/imgs/category/<%= banner[i].image %>" alt="Product" style="height: 14rem;"> </a>
                <div class="info-wrap">
                    <div class="dropdown float-end">
                        <a href="/admin/editBanner?id=<%= banner[i]._id %>" class="btn btn-sm btn-brand rounded">
                            <i class="material-icons md-edit mr-5"></i>Edit
                        </a>
                        <% if(banner[i].isActive == true){%>
                        <a href="/admin/deleteBanner?id=<%= banner[i]._id %>&key=<%= banner[i].isActive %>" class="btn btn-sm font-sm btn-light rounded">
                            <i class="material-icons md-delete_forever"></i> Remove
                        </a>
                        <%}else{%>}
                        <a href="/admin/deleteBanner?id=<%= banner[i]._id %>&key=<%= banner[i].isActive %>" class="btn btn-sm font-sm btn-light rounded">
                            <i class="material-icons md-delete_forever"></i> Insert
                        </a>
                        <%}%>
                    </div>
                    <a href="#" class="title"></a>
                    <div class="price mt-1"><%= banner[i].title %></div> 
                    <div class="price mt-1" style="color: green;">Start Date:<%= banner[i].startDate %></div> 
                    <div class="price mt-1" style="color: red;">End Date:<%= banner[i].endDate %></div> 

                    <p><%= banner[i].discription %></p><!-- price-wrap.// -->
                </div>
            </div> <!-- card-product  end// -->
        </div> <!-- col.// -->
        
        <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="2">Banner not found</td>
                            </tr>
                            <% } %>
    </div> <!-- row.// -->
</section>


<%- include('../adminLayout/footer.ejs',{adminSession}) %>