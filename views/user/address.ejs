                                    <script>
                                        function deleteAddress(id) {
                                            $.ajax({
                                                url: `/deleteAddress?id=${id}`,
                                                method: 'GET',

                                                success: function (response) {
                                                    if (response.status) {
                                                        alert(response.message)
                                                        setTimeout(function () {
                                                            location.reload()
                                                        }, 150)
                                                    } else {
                                                        alert(response.error)
                                                    }
                                                }



                                            })

                                        }

                                    </script>

                                    <% } %>

